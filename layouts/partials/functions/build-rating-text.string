{{- $context := 0 | index . -}}
{{- $kind := 1 | index . | string | lower -}}
{{- $rating := 2 | index . | int | default 0 -}}

{{- $ratingMaps := "build-ratings" | index $context.Site.Data -}}
{{- $ratingTexts := "texts" | index $ratingMaps -}}

{{- $text := printf "%s-%d" $kind $rating | index $ratingTexts | default "Unrated" -}}

{{- return $text -}}
